@charset "utf-8";
@import "compass";
@import "breakpoint";
@import "susy";

$font-list: 12px 14px 18px 20px 22px 24px 28px 38px 16px;
$base-font-size: nth($font-list, 2);
$base-line-height: 10px;
$rhythm-unit: 'px';

$mainWidth:960px;
$darkColor:#000;
$lightColor:#FFF;
$ygColor:#c8e02a;
$pinkColor:#d40c52;
$redColor:#dc3b31;

// $susy: ( columns:24, math:fluid, gutters:1/3, gutter-position:split, debug: (image: show));
// $gutter: 10px;
$susy: ( columns:24, math:fluid, gutters:1, gutter-position:split);
$gutter:20px;



%indent {
    display: block;
    overflow: hidden;
    text-indent: 100%;
    white-space: nowrap;
}
%decoration {
    display: block;
    text-decoration: none;
}
%block {
    @include container();
    max-width: $mainWidth;
}
%vertical-outer {
    &:before {
        display: inline-block;
        vertical-align: middle;
        width: 0px;
        height: 100%;
        content: "";
        visibility: hidden;
    }
}
%vertical-inner {
    display: inline-block;
    vertical-align: middle;
}

%inline-outer {
  letter-spacing: -4px; //可能需要微調
  // word-spacing: -4px;
  font-size: 0;
}
%inline-inner {
  letter-spacing: normal; //可能需要微調
  // word-spacing: normal;
  display:inline-block;
  *display: inline;
  zoom:1;
}
%clear {
    &:after {
        content: "";
        display: block;
        clear: both;
    }
}
@mixin image-block($path, $cache:false) {
    @extend %indent;
    background-image: image-url($path,false,$cache);
    width: image-width($path);
    height: image-height($path);
    background-repeat: no-repeat;
}


//===== PC版 =====
#lionhead, #lionfooter {
  *{
    font-size: 12px !important;
  }
}
.header_index {
  padding-top: rhythm(3);
  text-align: center;
  background-repeat: no-repeat;
  background-position: center 20px;
  h1 {
    display: inline-block;
    background-repeat: no-repeat;
    background-position: center top; 
    text-align: center;
    padding-top:rhythm(2);
    img {
      max-width: 100%;
      position: relative;
      //@include animation(sea 1.5s 4 alternate ease-out);
      // @include animation(scale 1s infinite alternate);
      @include animation(scale 1s alternate);
    }
  }
}
@include keyframes(sea) {
  0% {
    @include transform(translateY(0%));
  } 
  100% {
    @include transform(translateY(3%));
  }
}
@include keyframes(scale) {
  0% {
    @include transform(scale(1,1));
  } 
  25% {
    @include transform(scale(1.08,1.08));
  }
  50% {
    @include transform(scale(1,1));
  }
  75% {
    @include transform(scale(1.08,1.08));
  }
  100% {
    @include transform(scale(1,1));
  }
}
.topNav {
  @include span(16 of 24);
  float: none;
  margin: auto;
  position: relative;
  margin-top: -50px;
  z-index: 5;
  ul {
    background-color: $ygColor;
    border:3px solid #fff;
    @include border-radius(20px);
    text-align: center;
    li {
      display: inline-block;
      a {
        @include adjust-font-size-to(nth($font-list, 3), 5);
        text-decoration: none;
        &:hover {
          color: $redColor;
        }
      }
      &+li {
        margin-left: rhythm(1);
        &:before {
          content: "/";
          display: inline;
          margin-right: rhythm(1);
          @include adjust-font-size-to(nth($font-list, 3));
        }
      }
    }
  }
}
.th_index {
  @extend %block;
}
.md_index {
  @include span(24);
  margin-bottom: rhythm(6);
  position: relative;
  >a {
    position: absolute;
    top: -80px;
  }
  h3 {
    @include adjust-font-size-to(nth($font-list, 7),6 );
    background-color: #000;
    color: #fff;
    font-weight: bolder;
    display: inline-block;
    @include border-radius(20px);
    padding: 0 rhythm(1);
    margin-bottom: rhythm(1);
  }
  h5 {
    @include adjust-font-size-to(nth($font-list, 6), 3);
    margin-bottom: rhythm(1);
  }
  p {
    @include adjust-font-size-to(nth($font-list, 3), 3);
    margin-bottom: rhythm(1);
    strong {
      @include adjust-font-size-to(nth($font-list, 3), 3);
      color: $pinkColor;
    }
  }
  >div {
    @include span(12 of 24);
    position: relative;
    ul {
      margin-top: rhythm(3);
      @extend %clear;
      li {
        @include span(12 of 12 nest);
        margin-bottom: rhythm(.5);
      }
    }
    &+figure {
      padding-top: rhythm(9);
      @include span( isolate 6 of 24 at 16);
      float: none;
      img {
        max-width: 100%;
      }
    }
  }
  label {
    @include span(3 of 12 );
    @include adjust-font-size-to(nth($font-list, 3), 3);
    color: #565654;
  }
  input {
    @include span(8 of 12 nest);
    line-height: rhythm(3);
    height: rhythm(3);
  }
  footer {
    margin-top: rhythm(1);
    img {
      display: inline;
      vertical-align: middle;
      max-width: 100%;
    }
    >img {
      margin-right: rhythm(12);
    }
  }
}
.sendOut a {
  display: inline-block;
  width: rhythm(9);
  height: rhythm(9);
  background-color: $ygColor;
  border: 2px solid #fff;
  text-align: center;
  @include adjust-font-size-to(nth($font-list, 5), 2.5);
  text-decoration: none;
  @include border-radius(50%);
  padding: rhythm(2) rhythm(2) 0;
  @include box-sizing(border-box);
  position: absolute;
  bottom: 0;
  right: -80px;
}
.winnerList {
  @include span(18 of 24 nest);
  float: none;
  margin: auto;
  margin-top: rhythm(2);
  @extend %clear;
  li {
    background-color: #f7ea81;
    @include span(18 of 18);
    float: left;
    padding: 0 rhythm(3);
    @include box-sizing(border-box);
    @include border-radius(20px);
    line-height: rhythm(4);
    margin-bottom: rhythm(.5);
    >span {
      @include span(2 of 18 nest);
      @include adjust-font-size-to(nth($font-list, 4), 4);
      strong {
        @include adjust-font-size-to(nth($font-list, 8), 4);

      }
    }
    p {
      @include span(13 of 18);
      display: inline;
      @include adjust-font-size-to(nth($font-list, 4));
      padding-top: rhythm(1);
      &+span {
        @include span(3 of 18 nest);
        @include adjust-font-size-to(nth($font-list, 5), 4.5);
        text-align: center;
      }
    }
    &:nth-child(even) {
      background-color:#ded5cc;
    }
  }
}
.notice {
  li {
    margin-bottom: rhythm(2);
    margin-left: 40px;
    line-height: rhythm(3);
    list-style-type:decimal;
  }
}

//===== RWD變版 =====

//非 IE8 專用
@include breakpoint(0px) {
  html, body {
    min-width: 320px
  }
}
//Pad 專用
@include breakpoint(max-width 980px) {
  .header_index {
    h1 {
      width: 90%;
      padding-top: 0;
    }
  }
  .md_index {
    >div {
      @include span(24);
      &+figure {
        display: none;
      }
      ul {
        li {
          margin-bottom: rhythm(1);
        }
      }
    }
    label {
      text-align: right;
    }
    footer {
      @include span(24);
      text-align: center;
      >img {
        margin-right: 0;
        display: inline;
      }
      img+img {
        display: none;
      }
    }
  }
  .sendOut {
    @include span(22);
    float: none;
    margin: auto;
    margin-top: rhythm(1);
    text-align: center;
    a {
    position: relative;
    right: 0;
    }
  }
  .winnerList {
    @include span(24);
  }
  .topNav {
    @include span(24);
    margin-bottom: rhythm(2);
    margin-top: rhythm(-3);
  }
  .notice {
    @include span(20);
    float: none;
    margin: auto;
    li {
      word-wrap: break-word;
      word-break: break-all;
      margin-left: auto;
    }
  }
}
//Phone 專用
@include breakpoint(max-width 720px) {
  .header_index {
    h1 {
    }
  }
  .topNav {
    display: none;
  }
  .md_index {
    @include span(isolate 22 of 24 at 2);
    margin-right: auto;
    h3 {
      @include span(24 nest);
      @include border-radius(0);
      @include box-sizing(border-box);
      @include adjust-font-size-to(nth($font-list, 4), 4);
    }
    label, input{
      @include span(24);
    }
    label {
      text-align: center;
    }
  }
  .notice {
    @include span(isolate 22 of 24 at 2);
    margin-right: auto;
  }
  .winnerList {
    li {
      display: inline-block;
      height: auto;
      padding-top: rhythm(.5);
      margin-bottom: rhythm(1);
      >span {
        @include span(12 of 24);
        text-align: center;
      }
      p{
        @include span(12 of 24);
        text-align: center;
        &+span {
          @include span(24);
          text-align: center;
          border-top: 1px solid #fff;
        }
      }
    }
  }
}